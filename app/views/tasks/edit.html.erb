    <ul>
      <% @task.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <div class='registration_right'>
  <div class ='registration_form'>
  <%= form_with model: @task, url: task_path, method: :patch do |form| %>
  <p>
    <%= form.label :action_item %><br>
    <%= form.text_field :action_item %>
  </p>
  <p>
    <%= form.label :priority %><br>
    <%= form.select(:priority, options_for_select([["Critical"],["Medium"],["Trivial"]])) %>
  </p>
  <p>
    <%= form.label :deadline %><br>
    <%= form.date_field :deadline  %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
