
<p><%= @category%></p>

<h2>Add a task:</h2>

<% if @task.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@task.errors.count, "error") %> prohibited this article from being saved:</h2>

    <ul>
      <% @task.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: [@category, @task ] do |form| %>
  <p>
    <%= form.label :action_item %><br>
    <%= form.text_field :action_item %>
  </p>
  <p>
    <%= form.label :urgency %><br>
    <%= form.select(:priority, options_for_select([["Critical"],["Medium"],["Trivial"]])) %>
  </p>
  <p>
    <%= form.label :deadline %><br>
    <%= form.date_field :deadline %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
