
<div class='sign_in_page'>

  <div class='sign_in_left'>
    <div>
        <h1 id='everytask'>everytask</h1>
        <h2 id='tagline'>Reach that mental clarity <br> Carry out <em>Everytask!</em></h2>
    </div>
  </div>


  
  <div class='sign_in_right'>
  <div class ='sign_in_form'>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
      </div>
</div>
